<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/middle_margin"
    app:cardElevation="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/theme_two_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="123"
            android:textColor="@color/black_24K"
            android:textSize="@dimen/middle_size"
            android:layout_margin="@dimen/middle_margin"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/theme_two_up_civ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/middle_margin"
                    android:layout_marginRight="@dimen/middle_margin"
                    android:src="@mipmap/ic_launcher"/>
                <TextView
                    android:id="@+id/theme_two_up_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="258"
                    android:textColor="@color/black_24K"
                    android:textSize="@dimen/middle_size"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/theme_two_down_civ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/middle_margin"
                    android:layout_marginRight="@dimen/middle_margin"
                    android:src="@mipmap/ic_launcher"/>
                <TextView
                    android:id="@+id/theme_two_down_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="258"
                    android:textColor="@color/black_24K"
                    android:textSize="@dimen/middle_size"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_margin="@dimen/middle_margin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/theme_two_source_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/small_blue_color"
                    android:text="军事"/>
                <View
                    android:layout_width="@dimen/line_size"
                    android:layout_height="match_parent"
                    android:background="@color/gray_color"
                    android:layout_margin="3dp"/>
                <TextView
                    android:id="@+id/theme_two_attention_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注"/>
                <View
                    android:layout_width="@dimen/line_size"
                    android:layout_height="match_parent"
                    android:background="@color/gray_color"
                    android:layout_margin="3dp"/>
                <TextView
                    android:id="@+id/theme_two_ask_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提问"/>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@mipmap/ask_attention" />
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>