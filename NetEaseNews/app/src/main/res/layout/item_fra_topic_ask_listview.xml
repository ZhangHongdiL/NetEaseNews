<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/middle_margin"
        android:layout_marginRight="@dimen/middle_margin"
        android:layout_marginTop="@dimen/middle_margin"
        app:cardCornerRadius="@dimen/middle_margin"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/ask_title_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="30dp"
                    android:src="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/middle_margin">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ask_person_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:civ_border_color="@color/white_bg"
                        app:civ_border_width="2dp" />

                    <TextView
                        android:id="@+id/ask_person_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/middle_margin"
                        android:textColor="@color/black_24K"
                        android:textSize="@dimen/middle_size" />

                    <TextView
                        android:id="@+id/ask_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/ask_content_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/middle_margin"
                android:layout_marginRight="@dimen/middle_margin"
                android:layout_weight="1"
                android:textColor="@color/black_24K"
                android:textSize="@dimen/big_size" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/middle_margin"
                android:layout_weight="0.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/ask_source_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="军事"
                        android:textColor="@color/small_blue_color" />

                    <View
                        android:layout_width="@dimen/line_size"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:background="@color/gray_color" />

                    <TextView
                        android:id="@+id/ask_attention_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关注" />

                    <View
                        android:layout_width="@dimen/line_size"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:background="@color/gray_color" />

                    <TextView
                        android:id="@+id/ask_ask_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="提问" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/ask_attention" />
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>