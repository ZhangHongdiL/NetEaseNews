<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/middle_margin"
    app:cardCornerRadius="@dimen/main_radioButton_margin"
    app:cardElevation="@dimen/middle_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <ImageView
                android:id="@+id/ask_title_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:layout_gravity="bottom"
                android:src="@mipmap/ic_launcher"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/middle_margin">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ask_person_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:civ_border_color="@color/white_bg"
                    app:civ_border_width="2dp"
                    android:background="@mipmap/ic_launcher"/>
                <TextView
                    android:id="@+id/ask_person_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/middle_margin"
                    android:textSize="@dimen/middle_size"
                    android:textColor="@color/black_24K"/>
                <TextView
                    android:id="@+id/ask_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </FrameLayout>
        <TextView
            android:id="@+id/ask_content_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/big_size"
            android:textColor="@color/black_24K"
            android:layout_marginLeft="@dimen/middle_margin"
            android:layout_marginRight="@dimen/middle_margin" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_margin="@dimen/middle_margin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/ask_source_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/small_blue_color"
                    android:text="军事"/>
                <View
                    android:layout_width="@dimen/line_size"
                    android:layout_height="match_parent"
                    android:background="@color/gray_color"
                    android:layout_margin="3dp"/>
                <TextView
                    android:id="@+id/ask_attention_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注"/>
                <View
                    android:layout_width="@dimen/line_size"
                    android:layout_height="match_parent"
                    android:background="@color/gray_color"
                    android:layout_margin="3dp"/>
                <TextView
                    android:id="@+id/ask_ask_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提问"/>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@mipmap/ask_attention" />
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>