<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_fra_news_headline_img"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="@dimen/fra_news_headline_margin"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_fra_news_headline_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="新闻标题"
            android:textColor="@color/item_character_color"
            android:layout_margin="@dimen/fra_news_headline_margin"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/item_fra_news_headline_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@id/item_fra_news_headline_title"
            android:layout_marginBottom="@dimen/fra_news_headline_margin"
            android:text="新闻来源" />
        <TextView
            android:id="@+id/item_fra_news_headline_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跟帖数"
            android:layout_alignTop="@id/item_fra_news_headline_source"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/fra_news_headline_margin"
            android:layout_marginRight="@dimen/fra_news_headline_margin"/>
    </RelativeLayout>
</LinearLayout>