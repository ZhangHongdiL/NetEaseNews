<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_fragment_live_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/middle_margin"
        android:text="标题"/>
    <ImageView
        android:id="@+id/item_fragment_live_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="@dimen/middle_margin"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/item_fragment_live_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="直播回顾"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/middle_margin"/>
        <TextView
            android:id="@+id/item_fragment_live_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="多少人参与"
            android:layout_toLeftOf="@id/item_fragment_live_tv"
            android:layout_alignTop="@id/item_fragment_live_tv" />
    </RelativeLayout>
</LinearLayout>