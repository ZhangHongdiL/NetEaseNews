<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_fra_me_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fragment_me_button_padding"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/item_fra_me_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的消息"
        android:textSize="@dimen/big_size"
        android:layout_toRightOf="@id/item_fra_me_img"
        android:layout_centerVertical="true"/>
    <ImageView
        android:id="@+id/item_fra_me_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_enter"
        android:layout_margin="@dimen/fragment_me_button_padding"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>